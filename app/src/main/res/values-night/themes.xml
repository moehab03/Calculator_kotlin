<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Calculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/blue</item>
    </style>

    <style name="Theme.Calculator" parent="Base.Theme.Calculator" />

    <style name="blackBtnStyle">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:backgroundTint">@color/light_black</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="blueBtnStyle">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:backgroundTint">@color/dark_blue</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="grayBtnStyle">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="cornerRadius">10dp</item>
    </style>


</resources>